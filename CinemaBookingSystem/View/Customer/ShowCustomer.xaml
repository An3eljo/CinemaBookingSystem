<Page x:Class="CinemaBookingSystem.View.Customer.ShowCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaBookingSystem.View.Customer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CancelCustomer"
      Background="{StaticResource backgroundDefault}">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="16*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <TextBlock  Text="Select Film"      Grid.Column="0" Grid.Row="0" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock  Text="Select Show"      Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock  Text="Select Customer"  Grid.Column="2" Grid.Row="0" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <ComboBox Margin="10" Grid.Column="0" Grid.Row="1" x:Name="ComboBoxFilm"     SelectionChanged="ComboBoxFilm_OnSelectionChanged"/>
            <ComboBox Margin="10" Grid.Column="1" Grid.Row="1" x:Name="ComboBoxShow"     SelectionChanged="ComboBoxShow_OnSelectionChanged"/>
            <ComboBox Margin="10" Grid.Column="2" Grid.Row="1" x:Name="ComboBoxCustomer" SelectionChanged="ComboBoxCustomer_OnSelectionChanged"/>

            <Button Content="Delet" Grid.Column="1" Grid.Row="2" Margin="10" x:Name="ButtonDeleteCustomer" Click="ButtonDeleteCustomer_OnClick" IsEnabled="False"/>
            <Button Content="Edit"  Grid.Column="2" Grid.Row="2" Margin="10" x:Name="ButtonEdit" Click="ButtonEdit_OnClick" IsEnabled="False"></Button>
            
            <Label x:Name="LabelName"/>
            <Label x:Name="LabelPrename"/>
            <Label x:Name="LabelShow"/>
            <Label x:Name="LabelPrice"/>
            
        </Grid>
    </Grid>
</Page>
