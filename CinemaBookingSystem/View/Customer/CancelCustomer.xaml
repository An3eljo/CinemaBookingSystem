<Page x:Class="CinemaBookingSystem.View.Customer.CancelCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaBookingSystem.View.Customer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CancelCustomer"
      Background="{StaticResource backgroundDefault}">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="16*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="5" Grid.Column="0" Grid.Row="1">
                <TextBlock  Text="Select Film"     TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <ComboBox Margin="10" x:Name="ComboBoxFilm"     SelectionChanged="ComboBoxFilm_OnSelectionChanged"/>
            </StackPanel>

            <StackPanel Margin="5" Grid.Column="1" Grid.Row="1">
                <TextBlock  Text="Select Show"     TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <ComboBox Margin="10" x:Name="ComboBoxShow"     SelectionChanged="ComboBoxShow_OnSelectionChanged"/>
            </StackPanel>

            <StackPanel Margin="5" Grid.Column="2" Grid.Row="1">
                <TextBlock  Text="Select Customer" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <ComboBox Margin="10" x:Name="ComboBoxCustomer" SelectionChanged="ComboBoxCustomer_OnSelectionChanged"/>
            </StackPanel>
            
            <Button Content="Delet" Grid.Column="1" Grid.Row="2" Margin="10" x:Name="ButtonDeleteCustomer" Click="ButtonDeleteCustomer_OnClick" IsEnabled="False"/>
            <Button Content="Edit"  Grid.Column="2" Grid.Row="2" Margin="10" x:Name="ButtonEdit" Click="ButtonEdit_OnClick" IsEnabled="False"></Button>
            
        </Grid>
    </Grid>
</Page>
