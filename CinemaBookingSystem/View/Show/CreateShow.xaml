<Page x:Class="CinemaBookingSystem.View.Show.CreateShow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaBookingSystem.View.Show"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateShow"
      Background="{StaticResource backgroundDefault}">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <DatePicker Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Width="340" Margin="10" Name="DatePickerSelectDate"/>
            <ComboBox x:Name="ComboBoxFilm"/>
            <ComboBox x:Name="ComboBoxShowRoom"/>
            <TextBox x:Name="TextBoxDateHour"/>
            <TextBox x:Name="TextBoxDateMinute"/>
            <TextBox x:Name="TextBoxDateSecond"/>
            <TextBox x:Name="TextBoxPrice"/>
            <Button x:Name="ButtonCreate" Click="OnCreateClick"/>
        </Grid>
    </Grid>
</Page>
