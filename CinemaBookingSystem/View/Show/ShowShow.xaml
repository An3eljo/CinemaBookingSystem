<Page x:Class="CinemaBookingSystem.View.Show.ShowShow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaBookingSystem.View.Show"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowShow"
      Background="{StaticResource backgroundDefault}">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <ComboBox x:Name="ComboBoxShows" SelectionChanged="ComboBoxShows_OnSelectionChanged"/>
            <TextBlock x:Name="TextBlockFilm"/>
            <TextBlock x:Name="TextBlockShowRoom"/>
            <TextBlock x:Name="TextBlockDate"/>
            <TextBlock x:Name="TextBlockPrice"/>
            <Button x:Name="ButtonEdit" Click="OnEditClick" IsEnabled="False"/>
        </Grid>
    </Grid>
</Page>
