<Page x:Class="CinemaBookingSystem.View.Film.ManageFilms"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaBookingSystem.View.Film"
      mc:Ignorable="d"
      Title="ManageFilms"
      Height="400"
      Width="800"
      Background="{StaticResource backgroundDefault}">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="70"/>
            
            
            <TextBlock Text="Titel" Width="Auto" Height="Auto" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>
            
            <TextBlock Text="Duration" Width="Auto" Height="Auto" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"  Grid.Column="0" Grid.Row="1"/>
        </Grid>
    </Grid>
</Page>
